{
    "env": {
        "browser": false,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "array-bracket-newline": ["error", "always"],
        "jsx-quotes": ["error", "prefer-single"],
        "semi-style": ["error", "last"],
        "no-console": "error",
        "linebreak-style": ["error", "unix"]
    }
}

{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": false,
        "indent": [true, "spaces", 4],
        "interface-name": false,
        "max-classes-per-file": false,
        "max-line-length": { "severity": "warn", "options": [140] },
        "member-access": false,
        "member-ordering": false,
        "no-consecutive-blank-lines": [true, 2],
        "no-return-await": true,
        "no-switch-case-fall-through": false,
        "no-trailing-whitespace": [true, "ignore-jsdoc"],
        "no-var-requires": { "severity": "warn" },
        "object-literal-sort-keys": false,
        "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
        "prefer-template": true,
        "quotemark": [true, "single", "avoid-escape", "avoid-template"],
        "space-before-function-paren": [true, {"anonymous": "always", "asyncArrow": "always", "constructor": "never", "method": "never", "named": "never"}],
        "switch-default": false,
        "trailing-comma": false
    },
    "rulesDirectory": []
}
